# Uptimer Configuration
# Copy to .env and modify as needed

# Authentication
UPTIMER_USERNAME=admin
UPTIMER_PASSWORD=admin
UPTIMER_SECRET_KEY=change-me-in-production

# Server
UPTIMER_HOST=127.0.0.1
UPTIMER_PORT=8000

# CORS (comma-separated list of allowed origins, or "*" for all)
UPTIMER_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Session duration in seconds (default 24 hours)
UPTIMER_SESSION_MAX_AGE=86400

# MongoDB
UPTIMER_MONGODB_URI=mongodb://localhost:27017
UPTIMER_MONGODB_DB=uptimer
UPTIMER_RESULTS_RETENTION=10000000

# CLI client
UPTIMER_API_URL=http://localhost:8000
